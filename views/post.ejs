<!doctype html>
<html lang="en">
  <%- include('layouts/header') -%>
  <body>
    <%- include('layouts/navBar') -%>

    <div class="container" style="margin-top: 90px;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/blogs">Articles</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= blog.title %></li>
            </ol>
        </nav>
    </div>

    <div class="container" style="margin-top: 110px; margin-bottom: 90px;">

        <div class="row text-center">
            <div class="col-md-6">
                <img src="<%= blog.image %>" class="img-fluid shadow-2 rounded-2" alt="<%= blog.title %>">
                <p class="text-muted">
                    Posted On <%= blog.datePosted.toLocaleString() %>, By <%= blog.userid.username %>
                </p>
            </div>
            <div class="col-md-6">

                <h1 class="dipslay-3 mb-3"><%= blog.title %></h1>

                <p>
                    <%= blog.body %>
                </p>
                <% if(loggedIn) { %>
                    <a href="/delete/<%= blog._id %>" class="btn btn-warning">Delete Post</a>
                <% } %>

            </div>
        </div>
    </div>

    <%- include('layouts/footer') -%>

    <%- include('layouts/scripts') -%>
  </body>
</html>