<!doctype html>
<html lang="en">
  <%- include('layouts/header') -%>
  <body>
    <%- include('layouts/navBar') -%>

      <main>
        <div class="container-fluid" style="margin-top: 190px; margin-bottom: 140px;">
            <div class="row justify-content-center align-items-center">
                <div class="col-md-10">
                    <!-- Section heading -->
                    <h3 class="text-center font-weight-bold text-white mt-5 mb-3">New Review Post</h3>
                    <!-- Section description -->

                    <form class="mb-5 mx-md-5" action="/store/review" method="post" enctype="multipart/form-data">

                        <div class="row">

                            <div class="col-md-12 mb-4">

                                <!-- Phone -->
                                <input type="text" name="name" class="form-control" placeholder="Your Name">

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-4">

                                <!-- Subject -->
                                <input type="range" name="rating" min="1" max="5" class="form-control" placeholder="Your Rating">

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group mb-4">
                                    <textarea class="form-control rounded" name="summary" rows="7" placeholder="Summary of Review"></textarea>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>

                            </div>
                        </div>

                    </form>
                </div>
               
            </div>
        </div>
      </main>

    <%- include('layouts/footer') -%>

    <%- include('layouts/scripts') -%>
  </body>
</html>